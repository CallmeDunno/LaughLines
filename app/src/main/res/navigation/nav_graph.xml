<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_navigation">

    <navigation
        android:id="@+id/login_navigation"
        app:startDestination="@id/startFragment">
        <fragment
            android:id="@+id/startFragment"
            android:name="com.example.laughlines.view.start.StartFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_start">
            <action
                android:id="@+id/action_startFragment_to_signinFragment"
                app:destination="@id/signinFragment" />
            <action
                android:id="@+id/action_startFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.laughlines.view.register.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register">
            <action
                android:id="@+id/action_registerFragment_to_startFragment"
                app:destination="@id/startFragment" />
        </fragment>
        <fragment
            android:id="@+id/signinFragment"
            android:name="com.example.laughlines.view.signin.SigninFragment"
            android:label="fragment_signin"
            tools:layout="@layout/fragment_signin">
            <action
                android:id="@+id/action_global_homeFragment"
                app:destination="@id/home_navigation"/>
            <action
                android:id="@+id/action_signinFragment_to_startFragment"
                app:destination="@id/startFragment" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/home_navigation"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.laughlines.view.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
            <action
                android:id="@+id/action_homeFragment_to_friendsListFragment"
                app:destination="@id/friendsListFragment" />
            <action
                android:id="@+id/action_homeFragment_to_chatFragment"
                app:destination="@id/chatFragment" />
        </fragment>
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.laughlines.view.profile.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile" >
            <action
                android:id="@+id/action_global_login_navigation"
                app:destination="@id/login_navigation" />
            <action
                android:id="@+id/action_profileFragment_to_inforDetailFragment"
                app:destination="@id/inforDetailFragment" />
            <action
                android:id="@+id/action_profileFragment_to_changePasswordDetailFragment"
                app:destination="@id/changePasswordDetailFragment" />
        </fragment>
        <fragment
            android:id="@+id/friendsListFragment"
            android:name="com.example.laughlines.view.friends.FriendsListFragment"
            android:label="fragment_friends_list"
            tools:layout="@layout/fragment_friends_list" >
            <action
                android:id="@+id/action_friendsListFragment_to_chatFragment"
                app:destination="@id/chatFragment" />
        </fragment>
        <fragment
            android:id="@+id/chatFragment"
            android:name="com.example.laughlines.view.chat.ChatFragment"
            android:label="fragment_chat"
            tools:layout="@layout/fragment_chat" >
            <argument
                android:name="cid"
                app:argType="string" />
            <argument
                android:name="fid"
                app:argType="string" />
            <argument
                android:name="uid"
                app:argType="string" />
        </fragment>
        <fragment
            android:id="@+id/inforDetailFragment"
            android:name="com.example.laughlines.view.infor_detail.InforDetailFragment"
            android:label="fragment_infor_detail"
            tools:layout="@layout/fragment_infor_detail" />
        <fragment
            android:id="@+id/changePasswordDetailFragment"
            android:name="com.example.laughlines.view.change_pass_detail.ChangePasswordDetailFragment"
            android:label="fragment_change_password_detail"
            tools:layout="@layout/fragment_change_password_detail" />
    </navigation>
</navigation>