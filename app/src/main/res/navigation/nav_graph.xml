<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_navigation">

    <navigation
        android:id="@+id/login_navigation"
        app:startDestination="@id/loginFragment">
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.example.laughlines.view.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_signinFragment"
                app:destination="@id/signinFragment" />
            <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.example.laughlines.view.login.RegisterFragment"
            android:label="fragment_register"
            tools:layout="@layout/fragment_register">
            <action
                android:id="@+id/action_registerFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
        <fragment
            android:id="@+id/signinFragment"
            android:name="com.example.laughlines.view.login.SigninFragment"
            android:label="fragment_signin"
            tools:layout="@layout/fragment_signin">
            <action
                android:id="@+id/action_global_homeFragment"
                app:destination="@id/home_navigation"/>
            <action
                android:id="@+id/action_signinFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
    </navigation>
    <navigation
        android:id="@+id/home_navigation"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.laughlines.view.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
            <action
                android:id="@+id/action_homeFragment_to_friendsListFragment"
                app:destination="@id/friendsListFragment" />
        </fragment>
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.laughlines.view.profile.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile" >
            <action
                android:id="@+id/action_global_login_navigation"
                app:destination="@id/login_navigation" />
        </fragment>
        <fragment
            android:id="@+id/friendsListFragment"
            android:name="com.example.laughlines.view.friends.FriendsListFragment"
            android:label="fragment_friends_list"
            tools:layout="@layout/fragment_friends_list" />
    </navigation>
</navigation>